.upper-info
  .upper-info__contents
    .upper-info__contents__logo
      = current_user.name + "さんのマイページ"
    .upper-info__contents__form
      .upper-info__contents__form__input
        = form_with url: search_memos_path, local: true, method: :get, class: "search-form" do |form|
          = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
          = form.submit "検索", class: "search-btn"
    .upper-info__contents__menus
      .upper-info__contents__menus__name
        = link_to root_path do
          一覧
      .upper-info__contents__menus__menu1
        = link_to new_memo_path do
          = icon('far', 'edit')
      .upper-info__contents__menus__menu2
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog')

.create-contents
  .create-contents__menu
    .create-contents__menu__btn
      .create-contents__menu__btn__list
        .create-contents__menu__btn__list__box
          = link_to root_path do
            一覧に戻る
      .create-contents__menu__btn__my-page
        .create-contents__menu__btn__my-page__box
          = link_to user_path(current_user) do
            マイページに戻る
